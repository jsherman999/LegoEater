{
  "name": "legoeater",
  "private": true,
  "version": "0.1.0",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "sh -c 'bun run --filter @lego/api dev & bun run --filter @lego/web dev & wait'",
    "build": "bun run --filter @lego/web build",
    "start": "NODE_ENV=production bun run --filter @lego/api start",
    "cli": "bun run --filter @lego/cli dev",
    "cli:link": "bun run --filter @lego/cli link"
  }
}
